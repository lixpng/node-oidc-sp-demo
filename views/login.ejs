<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>登录</title>
    <style>
      html,
      body {
        height: 100%;
      }
      .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      form > * {
        margin-bottom: 24px;
      }
      input {
        line-height: 28px;
      }
      button {
        float: right;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h3><%=tenant ? tenant.name + '企业登录界面' : '通用登录界面'%></h3>
      <form id="loginForm">
        邮箱：
        <input required name="email" placeholder="邮箱" />
        <br />
        密码：
        <input required type="password" name="password" placeholder="密码" />
        <br />
        <button type="submit">登录</button>
      </form>

      <div>
        <% oidcList.forEach(function(oidcItem){%>
        <a href="/api/oidc-login/<%=oidcItem.id%>"
          >使用<%=oidcItem.name %>登录</a
        >
        <% }) %>
      </div>
    </div>
  </body>

  <script>
    document.getElementById('loginForm').addEventListener('submit', (evt) => {
      evt.preventDefault()
      const { email, password } = evt.target.elements
      fetch('/api/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email: email.value,
          password: password.value,
        }),
      })
        .then((e) => e.json())
        .then((data) => {
          if (data.code === 200) {
            window.location.href = '/'
          } else {
            alert(data.message)
          }
        })
        .catch(() => {
          alert('网络错误')
        })
    })
  </script>
</html>
